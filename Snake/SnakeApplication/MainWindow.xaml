<Window x:Class="SnakeApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450"
        KeyDown="KeyEvent">
    <Grid x:Name="mainGrid">
        <Label Foreground="Blue" FontWeight="Bold" Content="Score:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelScore" FontWeight="Bold" Foreground="Blue" Content="0" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Image x:Name="gameImage" HorizontalAlignment="Left" Height="100" Margin="10,67,0,0" VerticalAlignment="Top" Width="100"/>
        <Grid x:Name="gameGrid">
            <Grid.RowDefinitions>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Window>
